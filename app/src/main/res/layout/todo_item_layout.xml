<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/todo_item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/todo_item_layout_height">

    <ImageView
        android:id="@+id/todo_item_image"
        android:background="@drawable/black_border"
        android:layout_width="@dimen/todo_item_image_dimens"
        android:layout_height="@dimen/todo_item_image_dimens"
        android:layout_margin="@dimen/todo_item_margin_value"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/todo_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/todo_item_text_size"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/todo_item_margin_value"
        android:layout_alignTop="@+id/todo_item_image"
        android:layout_toEndOf="@id/todo_item_image"
        android:text="@string/new_todo_title_text"/>

    <TextView
        android:id="@+id/todo_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/todo_item_text_size"
        android:textColor="@android:color/black"
        android:layout_marginStart="@dimen/todo_item_margin_value"
        android:layout_marginTop="@dimen/todo_item_desc_top_margin"
        android:layout_below="@id/todo_item_title"
        android:layout_toEndOf="@id/todo_item_image"
        android:text="@string/new_todo_title_text"/>

    <CheckBox
        android:id="@+id/todo_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/todo_item_margin_value"
        android:layout_marginTop="@dimen/todo_item_margin_value"
        android:buttonTint="@color/colorPrimaryDark" />

</RelativeLayout>